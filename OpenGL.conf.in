#include "config.h"

Package {
	name		= "OpenGL",
	auto		= True,
#ifdef INSTALLING
	import_dirs	= [ "$libdir/imports/OpenGL" ],
#else
	import_dirs	= [ "$libdir/libraries/OpenGL" ],
#endif
	source_dirs	= [],
#ifdef INSTALLING
	library_dirs	= [ "$libdir" ],
#else
	library_dirs	= [ "$libdir/libraries/OpenGL" ],
#endif
	hs_libraries	= [ "HSOpenGL" ],
	extra_libraries	= [],
#ifdef INSTALLING
	include_dirs	= [],
#else
	include_dirs	= [ "$libdir/libraries/OpenGL/include" ],
#endif
	c_includes	= [ "HsOpenGL.h" ],
	package_deps	= [ "base" ],
	extra_ghc_opts	= [],
	extra_cc_opts	= [ "" GL_CFLAGS ],
	extra_ld_opts	= [ "" GL_LIBS ]
}
